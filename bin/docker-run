#!/usr/bin/env bash

# Exit on error
set -o errexit

# Source environmental variables
set -a && source .env && source .env.local && set +a

# With an `.env` file
# sudo docker container run --env-file .env --rm -it -p 127.0.0.1:4000:4000 --name sparrow sparrow

VERSION=${1:-latest}

# Without an `.env` file:
sudo docker container run --rm -it -p 127.0.0.1:${PORT}:${PORT} --name things-api things-api:${VERSION}
